<form action='/send_email' method='post' data-toggle="validator">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="form-group">
        <label for="email" class="control-label">Email address</label>
        <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter email" required>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        <div class="help-block with-errors"></div>
      </div>
      <div class="form-group">
        <label for="subject" class="control-label">Subject</label>
        <input type="text" name="subject" class="form-control" id="subject" placeholder="Enter subject" required>
        <div class="help-block with-errors"></div>
      </div>
      <div class="form-group">
        <label for="body" class="control-label">Question/Comment</label>
        <textarea name="body" class="form-control" id="body" placeholder="Enter email body" data-error="Invalid Email Address" required></textarea>
        <div class="help-block with-errors"></div>
      </div>
    </div>
    <div class="col-xs-6 col-xs-offset-3">
      <span class="pull-right">
        <div class="form-group">
          <%= recaptcha_tags %>
        </div>
      </span>
    </div>
    <div class="col-xs-6 col-xs-offset-3">
      <span class="pull-right">
        <button type="submit" class="btn btn-primary">Submit</button>
      </span>
    </div>
  </div>
</form>
